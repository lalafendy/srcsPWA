      <label for="admin_name">NAME :</label>
      <input type="text" class="form-control" name="admin_name" id="admin_name" placeholder="name" required>
  </div>
  <div class="form-group col-md-4">
      <label for="admin_address">ADDRESS:</label>
      <input type="text" class="form-control" name="admin_address" id="admin_address" placeholder="address" required>
  </div>
  <div class="form-group col-md-4">
